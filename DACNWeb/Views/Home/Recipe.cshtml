@model DACNWeb.Models.Food
@{
    ViewBag.Title = "Recipe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en-gb" dir="ltr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Recipe | Cooking Recipe HTML Template</title>
    <link rel="shortcut icon" type="image/png" href="img/favicon.png">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Leckerli+One&display=swap" rel="stylesheet">
    <link href="~/Content/css/main.css" rel="stylesheet" />
    <script src="~/Content/js/uikit.js"></script>
</head>

<body>
    <div class="uk-container">
        <div data-uk-grid>

            <div class="uk-width-1-2@s">
                <div>
                    <img class="uk-border-rounded-large" src="@Url.Content(@Model.Image)"
                         alt="Image alt">
                </div>
            </div>
            <div class="uk-width-expand@s uk-flex uk-flex-middle">
                <div>
                    <h1>@Model.TenMonAn</h1>
                    <p>
                        @Model.TieuDe
                    </p>
                    <div class="uk-margin-medium-top uk-child-width-expand uk-text-center uk-grid-divider" data-uk-grid>
                        <div>
                            <span data-uk-icon="icon: clock; ratio: 1.4"></span>
                            <h5 class="uk-text-500 uk-margin-small-top uk-margin-remove-bottom">Thời gian chuẩn bị</h5>
                            <span class="uk-text-small">@Model.ActiveTime phút</span>
                        </div>
                        <div>
                            <span data-uk-icon="icon: future; ratio: 1.4"></span>
                            <h5 class="uk-text-500 uk-margin-small-top uk-margin-remove-bottom">Tổng thời gian</h5>
                            <span class="uk-text-small">@Model.TotalTime phút</span>
                        </div>
                        <div>
                            <span data-uk-icon="icon: users; ratio: 1.4"></span>
                            <h5 class="uk-text-500 uk-margin-small-top uk-margin-remove-bottom">Khẩu phần ăn</h5>
                            <span class="uk-text-small">@Model.Yield Người</span>
                        </div>
                    </div>
                    <hr>
                    <div data-uk-grid>
                        <div class="uk-width-auto@s uk-text-small">
                            <p class="uk-margin-small-top uk-margin-remove-bottom ">Tác giả: <a href="#">@Model.User.FullName</a></p>
                            <span class="uk-text-muted">Ngày đăng: @Model.NgayTao</span>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="uk-section uk-section-default">
        <div class="uk-container uk-container-small">
            <div class="uk-grid-large" data-uk-grid>
                <div class="uk-width-expand@m">
                    <div class="uk-article">
                        <h3>Hướng dẫn cách làm món @Model.TenMonAn</h3>
                        @Html.Raw(Model.NoiDung)




                        <hr class="uk-margin-medium-top uk-margin-large-bottom">


                    </div>
                </div>
                <div class="uk-width-1-3@m">
                    <h3>Nguyên Liệu</h3>
                    <ul class="uk-list uk-list-large uk-list-divider uk-margin-medium-top">
                        @foreach (var item in ViewBag.arrayMaterial)
                        {
                            <li>@item.SoLuong @item.DonVi @item.TenNL</li>
                        }

                    </ul>


                </div>
            </div>
        </div>
    </div>

